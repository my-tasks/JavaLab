<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Task3_ShopApp_XmlParsers</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>xmlParseAction</servlet-name>
    <servlet-class>com.epam.task3.controller.XmlParseAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>xmlParseAction</servlet-name>
    <url-pattern>/parse</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>xslAction</servlet-name>
    <servlet-class>com.epam.task3.controller.XslTransformAction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>xslAction</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>Encoding</filter-name>
    <filter-class>com.epam.task3.util.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error.html</location>
  </error-page>
</web-app>